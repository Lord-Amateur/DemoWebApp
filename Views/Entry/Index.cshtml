@model IEnumerable<DemoWebApp.Models.Medicine>

@{
    ViewData["Title"] = "Index";
}
<p>
    <button class="btn btn-light"  asp-action="Create">Create New</button>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-2 col-4">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                <h5 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.GenericName)</h5>
                <h6 class="card-text">@Html.DisplayFor(modelItem => item.Unit)</h6>
                <h6 class="card-text">@Html.DisplayFor(modelItem => item.Place)</h6>
                <a class="card-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="card-link" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="card-link" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>

